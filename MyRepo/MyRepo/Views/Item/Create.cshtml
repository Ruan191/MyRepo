@{
    var a = ViewBag.Err;
}

<form method="post" enctype="multipart/form-data">
    <h1>@a?.ErrorMsg</h1>
    
    <div class="mb-3">
      <label for="formFile" class="form-label">File</label>
      <input class="form-control" name="file" type="file" id="formFile">
    </div>
    <div class="mb-3">
      <label for="isPublic" class="form-label">Public</label>
      <input asp-for="isPublic" type="checkbox">
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Description</label>
        <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <div style="text-align: right; margin-top: 5px;">
        <button asp-action="Createe" type="submit" class="btn btn-primary" onclick="load()"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-upload" viewBox="0 0 16 16">
  <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5z"/>
  <path d="M7.646 1.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 2.707V11.5a.5.5 0 0 1-1 0V2.707L5.354 4.854a.5.5 0 1 1-.708-.708l3-3z"/>
</svg></button>
    </div>
</form>
<div id="load">

</div>

<script type="text/javascript">
    function load(){
        const t = document.getElementById("load");
        t.innerHTML = '<label>Uploading</label><div class="spinner-border" role="status"><span class="sr-only"></span></div>'
    }
</script>


